# ============================================================
# AI Design Tool - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ============================================================

# ===================== CORE SETTINGS =====================
# Set to 'False' in production
DEBUG=True

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-super-secret-key-change-in-production

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===================== DATABASE =====================
# For SQLite (development)
# DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (production recommended)
DB_NAME=ai_design_tool
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# ===================== REDIS =====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===================== OAUTH PROVIDERS =====================

# Google OAuth 2.0
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
# Recommended frontend callback for local dev (SPA)
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/google/callback/

# GitHub OAuth
# Create OAuth App at: https://github.com/settings/developers
GITHUB_OAUTH_CLIENT_ID=your-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-client-secret
GITHUB_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/github/callback/

# Firebase Configuration
# Get from Firebase Console: https://console.firebase.google.com
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ===================== ENCRYPTION =====================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_MASTER_KEY=your-encryption-master-key-must-be-32-bytes

# Enable database field encryption
DATABASE_ENCRYPTION_ENABLED=True

# ===================== BOT PROTECTION =====================
# reCAPTCHA v3 (Get keys at: https://www.google.com/recaptcha/admin)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SCORE_THRESHOLD=0.5

# ===================== RATE LIMITING =====================
# Global rate limits (requests per minute per IP)
GLOBAL_RATE_LIMIT=500
BURST_RATE_LIMIT=20

# ===================== BACKUP CONFIGURATION =====================
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12

# S3 Backup (optional)
USE_S3_BACKUP=False
S3_BACKUP_BUCKET=your-backup-bucket
S3_BACKUP_PREFIX=backups/

# Backup notifications
BACKUP_NOTIFY_SUCCESS=False
BACKUP_NOTIFY_FAILURE=True
BACKUP_NOTIFICATION_EMAIL=admin@example.com

# ===================== PASSWORD POLICY =====================
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True

# ===================== ACCOUNT LOCKOUT =====================
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_LOCKOUT_DURATION=30

# ===================== SESSION SECURITY =====================
SESSION_COOKIE_AGE=86400

# ===================== AUDIT LOGGING =====================
AUDIT_LOG_ENABLED=True
AUDIT_LOG_RETENTION_DAYS=90

# ===================== IP SECURITY =====================
# Comma-separated list of blocked IPs
IP_BLOCKLIST=

# Comma-separated list of IPs allowed to access admin (empty = all allowed)
ADMIN_IP_ALLOWLIST=

# ===================== CORS =====================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================== EMAIL =====================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@aidesigntool.com
ADMIN_EMAIL=admin@aidesigntool.com

# ===================== AI SERVICES =====================
# Groq API for LLM (chat/text generation) - REQUIRED
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI API for image generation (DALL-E) - OPTIONAL
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# ===================== AWS S3 (Optional) =====================
USE_S3_STORAGE=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=ai-design-assets
AWS_S3_REGION_NAME=us-east-1

# ===================== MONITORING =====================
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Security alert webhook (Slack, Discord, etc.)
SECURITY_ALERT_WEBHOOK=https://hooks.slack.com/services/your/webhook/url

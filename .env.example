# AI Design Tool - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (set to False in production!)
DEBUG=True

# Secret key (generate a new one for production)
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL (recommended for production)
DB_NAME=aidesign
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Or use DATABASE_URL format
# DATABASE_URL=postgres://user:password@host:5432/dbname

# =============================================================================
# REDIS & CELERY
# =============================================================================

# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# Celery broker URL
CELERY_BROKER_URL=redis://localhost:6379/1

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI API Key (for GPT-4, DALL-E)
OPENAI_API_KEY=sk-your-openai-api-key

# Groq API Key (for fast Llama inference)
GROQ_API_KEY=gsk-your-groq-api-key

# Anthropic API Key (for Claude - optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# =============================================================================
# STRIPE (Payments)
# =============================================================================

# Stripe Keys
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# EMAIL
# =============================================================================

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# For development, use console backend:
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Figma Integration
FIGMA_CLIENT_ID=your-figma-client-id
FIGMA_CLIENT_SECRET=your-figma-client-secret

# =============================================================================
# STORAGE (Optional - defaults to local)
# =============================================================================

# AWS S3 Storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cdn.cloudfront.net

# =============================================================================
# MONITORING (Optional but recommended)
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Environment name
ENVIRONMENT=development

# =============================================================================
# SECURITY (Production)
# =============================================================================

# Enable these in production
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limits (requests per minute)
RATELIMIT_API=100
RATELIMIT_AI=10
RATELIMIT_AUTH=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_AI_ENABLED=True
FEATURE_TEAMS_ENABLED=True
FEATURE_PLUGINS_ENABLED=True
FEATURE_ANALYTICS_ENABLED=True
